<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Elasticsuite\Catalog\Model\Catalog" table="catalog" repository-class="Elasticsuite\Catalog\Repository\CatalogRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="code" type="string" length="255" nullable="false" unique="true" />
        <field name="name" type="string" length="255" nullable="true" unique="false" />

        <one-to-many field="localizedCatalogs" target-entity="Elasticsuite\Catalog\Model\LocalizedCatalog" mapped-by="catalog">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>

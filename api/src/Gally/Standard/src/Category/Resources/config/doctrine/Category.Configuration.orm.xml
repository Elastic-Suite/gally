<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

   <entity name="Gally\Category\Model\Category\Configuration"
           repository-class="Gally\Category\Repository\CategoryConfigurationRepository"
           table="category_configuration">

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <many-to-one field="category" target-entity="Gally\Category\Model\Category">
            <join-column name="category_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" on-update="CASCADE"/>
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>
        <many-to-one field="catalog" target-entity="Gally\Catalog\Model\Catalog">
            <join-column name="catalog_id" referenced-column-name="id" nullable="true" on-delete="CASCADE" on-update="CASCADE"/>
        </many-to-one>
        <many-to-one field="localizedCatalog" target-entity="Gally\Catalog\Model\LocalizedCatalog">
            <join-column name="localized_catalog_id" referenced-column-name="id" nullable="true" on-delete="CASCADE" on-update="CASCADE"/>
        </many-to-one>

        <unique-constraints>
            <unique-constraint columns="category_id" name="unique_category_id">
                <options>
                    <option name="where">((catalog_id IS NULL) AND (localized_catalog_id IS NULL))</option>
                </options>
            </unique-constraint>
            <unique-constraint columns="category_id,catalog_id" name="unique_category_id_catalog_id">
                <options>
                    <option name="where">((catalog_id IS NOT NULL) AND (localized_catalog_id IS NULL))</option>
                </options>
            </unique-constraint>
            <unique-constraint columns="category_id,catalog_id,localized_catalog_id" name="unique_category_id_catalog_id_localized_catalog_id">
                <options>
                    <option name="where">((catalog_id IS NOT NULL) AND (localized_catalog_id IS NOT NULL))</option>
                </options>
            </unique-constraint>
        </unique-constraints>

        <field name="name" type="string" length="255" nullable="true" />
        <field name="isVirtual" type="boolean" nullable="true" />
        <field name="virtualRule" type="text" nullable="true" />
        <field name="useNameInProductSearch" type="boolean" nullable="true" />
        <field name="defaultSorting" type="string" length="255" nullable="true" />
        <field name="isActive" type="boolean" nullable="false" />

    </entity>

</doctrine-mapping>

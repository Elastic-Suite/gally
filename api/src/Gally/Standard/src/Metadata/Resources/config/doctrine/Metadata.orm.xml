<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Gally\Metadata\Model\Metadata" table="metadata" repository-class="Gally\Metadata\Repository\MetadataRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="entity" type="string" length="255" nullable="false" unique="true" />

        <one-to-many field="sourceFields" target-entity="Gally\Metadata\Model\SourceField" mapped-by="metadata">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>
